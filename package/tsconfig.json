{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "allowJs": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "noEmitOnError": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src", "types"]
}
